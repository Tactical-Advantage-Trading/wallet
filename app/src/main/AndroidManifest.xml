<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="false"
        android:supportsRtl="false"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:name="trading.tacticaladvantage.WalletApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/NoActionBar">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="trading.tacticaladvantage"
            android:grantUriPermissions="true"
            android:exported="false">

        <meta-data
            android:name="android.support.FILE_PROVIDER_PATHS"
            android:resource="@xml/filepaths"/>

        </provider>

        <activity
            android:exported="true"
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="adjustNothing">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <intent-filter>
                <!-- receiving shared text -->
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>

            <intent-filter>
                <!-- receiving link clicks -->
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="bitcoin"/>
            </intent-filter>
        </activity>

        <activity
            android:launchMode="singleTask"
            android:name=".EmergencyActivity"
            android:theme="@style/NoActionBar"/>

        <activity
            android:name=".SetupActivity"
            android:launchMode="singleTask"
            android:theme="@style/NoActionBar"/>

        <activity
            android:name=".QRBtcActivity"
            android:launchMode="singleTask"
            android:theme="@style/NoActionBar"/>

        <activity
            android:name=".QRSigActivity"
            android:launchMode="singleTask"
            android:theme="@style/NoActionBar"/>

        <activity
            android:name=".QRUsdtActivity"
            android:launchMode="singleTask"
            android:theme="@style/NoActionBar"/>

    </application>
</manifest>