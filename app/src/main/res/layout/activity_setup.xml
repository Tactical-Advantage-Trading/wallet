<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    style="@style/StandardLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout style="@style/StandardLinearLayout">
        <LinearLayout style="@style/StandardXYMarginLinearLayout">

            <TextView
                android:layout_marginTop="@dimen/chip_default_padding_edge"
                android:id="@+id/fancyAppName"
                style="@style/Emphasized"/>

            <TextView
                android:id="@+id/devInfo"
                android:linksClickable="true"
                android:layout_marginTop="10dp"
                android:textColorLink="@color/btcLogo"
                style="@style/BoundedView"/>

            <com.ornach.nobobutton.NoboButton
                android:layout_marginTop="45dp"
                app:nb_text="@string/setup_create_new"
                android:onClick="createNewWallet"
                style="@style/GreenButton"/>

            <TextView
                android:layout_marginTop="@dimen/chip_default_padding_edge"
                android:text="@string/setup_create_new_hint"
                style="@style/BoundedView"/>

            <com.ornach.nobobutton.NoboButton
                android:layout_marginTop="45dp"
                app:nb_text="@string/setup_restore_existing"
                android:id="@+id/restoreOptionsButton"
                android:onClick="showMnemonicPopup"
                style="@style/BlueButton"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>