<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/StandardLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:gravity="center"
        android:id="@+id/usdtQrCaption"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/header_size"
        style="@style/FillingView"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <include
            android:id="@+id/usdtQr"
            android:layout_marginBottom="100dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            layout="@layout/frag_qr"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_width="340dp"
        android:padding="15dp">

        <TextView
            android:layout_gravity="center"
            android:textSize="@dimen/header_size"
            android:text="@string/usdt_polygon_warn_title"
            android:drawableStart="@drawable/ic_logo_polygon_24"
            android:drawablePadding="10dp"
            style="@style/BoundedView"/>

        <TextView
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="@string/usdt_polygon_warn"
            style="@style/BoundedView"/>

    </LinearLayout>
</RelativeLayout>